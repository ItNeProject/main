<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itne.dao.FindDao">
	
	<!-- public String selectUserId(String phone); -->
	<select id="selectUserId" resultType="String">
		select id from users where phone = #{phone}
	</select>
	
	<!-- public String selectUserPw(String userId, String phone, String userName); -->
	<select id="selectUserPw" resultType="String">
		select pwd from users where id=#{id} and phone = #{phone}
	</select>
	
</mapper>